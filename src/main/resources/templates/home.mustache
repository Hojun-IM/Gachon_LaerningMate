{{>layouts/header}}

<!-- List -->
<div class="mt-auto d-flex justify-content-center">
    <ul>
        <li style="display: inline-block; margin-right: 40px;"><a href="/study/my">내 스터디</a></li>
        <li style="display: inline-block; margin-left: 40px; margin-right: 40px"><a href="/study">스터디 목록</a></li>
        <li style="display: inline-block; margin-left: 40px;"><a href="/study/create">스터디 생성</a></li>
    </ul>
</div>

<hr class="mt-5" style="width: 80%; margin: 0px auto;">

<!-- Search -->
<div class="mt-5 mb-5">
    <form class="d-flex justify-content-center" role="search">
        <input class="form-control me-2 w-75" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
</div>

<!-- Studies -->
<div class="container mt-4">
    <div class="card-group-scroll" style="display: flex; overflow-x: auto; -webkit-overflow-scrolling: touch; white-space: nowrap;">
        <!-- Favorite Studies -->
        {{#favoriteStudies}}
            <a href="/study/info?studyId={{studyId}}" class="card-link" style="text-decoration: none; color: inherit;">
                <div class="card" style="min-width: 300px; margin-right: 1rem; display: inline-block;">
                    <img src="{{photoPath}}" class="card-img-top" alt="Study Image" style="max-width: 100%; height: auto; max-height: 100px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">{{studyName}}</h5>
                        <p class="card-text" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 250px;">
                            {{description}}
                        </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Last updated {{createdAt}}</small>
                    </div>
                </div>
            </a>
        {{/favoriteStudies}}

        <!-- Recent Studies -->
        {{^favoriteStudies}}
            {{#recentStudies}}
                <a href="/study/info?studyId={{studyId}}" class="card-link" style="text-decoration: none; color: inherit;">
                    <div class="card" style="min-width: 300px; margin-right: 1rem; display: inline-block;">
                        <img src="{{photoPath}}" class="card-img-top" alt="Study Image" style="max-width: 100%; height: auto; max-height: 100px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">{{studyName}}</h5>
                            <p class="card-text" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 250px;">
                                {{description}}
                            </p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Last updated {{createdAt}}</small>
                        </div>
                    </div>
                </a>
            {{/recentStudies}}
        {{/favoriteStudies}}
    </div>
</div>

{{>layouts/footer}}
