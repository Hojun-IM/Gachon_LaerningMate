{{>layouts/header}}

<div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center" style="height: 100%;">
        <div class="col-12 col-lg-10">
            <div class="card text-white" style="border-radius: 1rem; background-color: #002244;">
                <div class="card-body p-5">
                    <form action="/study-create" method="post">
                        <div class="row">
                            <!-- Image Upload Section -->
                            <div class="col-md-6 mb-4">
                                <div class="image-preview mb-4" style="width: 400px; height: 225px; border: 1px solid #ccc;">
                                    <!-- Preview will be shown here -->
                                </div>
                                <div class="input-group">
                                    <input type="file" class="form-control" id="file-upload">
                                    <label class="input-group-text" for="file-upload">Upload</label>
                                </div>
                            </div>
                            <!-- User Input Section -->
                            <div class="col-md-6 mb-4">
                                <div class="input-group mb-4">
                                    <span class="input-group-text"><i class="bi-person"></i></span>
                                    <input type="text" class="form-control" name="username" value="{{username}}" placeholder="사용자명" readonly>
                                </div>
                                <div class="input-group mb-4">
                                    <span class="input-group-text">@</span>
                                    <input type="text" class="form-control" name="email" value="{{email}}" placeholder="이메일" readonly>
                                </div>
                                <div class="input-group mb-4">
                                    <span class="input-group-text">#</span>
                                    <input type="text" class="form-control" name="maxMember" placeholder="인원수(최대50명)">
                                </div>
                                <div class="input-group mb-4">
                                    <span class="input-group-text">스터디명</span>
                                    <input type="text" class="form-control" name="studyName" placeholder="스터디명">
                                </div>
                                <div class="input-group mb-4">
                                    <span class="input-group-text">카테고리</span>
                                    <input type="text" class="form-control" name="category" placeholder="카테고리">
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-4">
                            <span class="input-group-text">스터디 장소</span>
                            <input type="text" class="form-control" name="location" placeholder="스터디 장소">
                        </div>
                        <div class="input-group mb-4">
                            <span class="input-group-text">스터디 설명</span>
                            <textarea class="form-control" name="description" placeholder="이곳에 스터디에 대한 설명을 적어주세요!"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">등록</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{>layouts/footer}}
